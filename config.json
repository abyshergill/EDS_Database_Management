{
    "database": {
        "type": "sqlite",
        "sqlite_path": "data/eds.db",
        "postgresql": {
            "host": "localhost",
            "port": 5432,
            "database": "eds_db",
            "user": "postgres",
            "password": "your_password_here"
        }
    },
    "ui": {
        "theme": "modern",
        "window_size": "900x750"
